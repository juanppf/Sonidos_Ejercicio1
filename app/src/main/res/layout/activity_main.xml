<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.juanp.sonidos_ejercicio1.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/trompeta"
        android:id="@+id/imageButton5"
        android:onClick="onClickImatgeAnimal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/piano"
        android:layout_marginTop="52dp"
        android:id="@+id/imageButton7"
        android:onClick="onClickImatgeAnimal"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/violin"
        android:id="@+id/imageButton3"
        android:onClick="onClickImatgeAnimal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tambor"
        android:id="@+id/imageButton4"
        android:onClick="onClickImatgeAnimal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/platillos"
        android:id="@+id/imageButton11"
        android:onClick="onClickImatgeAnimal"
        android:layout_alignTop="@+id/imageButton10"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/clarinete"
        android:id="@+id/imageButton10"
        android:onClick="onClickImatgeAnimal"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_alignStart="@+id/imageButton4" />
</RelativeLayout>
